<h1><%= @skill.name %></h1>

<section>
  <h2>スキルを所持しているユーザー</h2>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= link_to user.full_name, user %>
      </li>
    <% end %>
  </ul>
</section>

<section>
  <h2>操作</h2>
  <ul>
    <li><%= link_to "スキル名の編集", edit_skill_path(@skill) %></li>
    <li><%= link_to "スキルを削除", skill_path(@skill), data: {
      turbo_method: :delete,
      turbo_confirm: "本当に削除しますか？"
    } %></li>
    <li><%= link_to "スキル一覧に戻る", skills_path %></li>
  </ul>
</section>
