<h1>ログイン</h1>

<%= button_to "Googleでログイン", "/auth/google_oauth2", method: :post, data: { turbo: false } %>

<%= form_with url: admin_login_path, method: :post do |form| %>
  <div>
    <%= form.label :email, "メールアドレス" %><br>
    <%= form.email_field :email %>
  </div>

  <%= form.submit "ログイン" %>
<% end %>
