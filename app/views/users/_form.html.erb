<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :name, "ユーザー名" %><br>
        <%= form.text_field :name %>
        <% @user.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit "保存" %>
    </div>
<% end %>
